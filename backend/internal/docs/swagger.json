{
    "schemes": [
        "http"
    ],
    "swagger": "2.0",
    "info": {
        "description": "Documentação da API REST para o teste da VR Software",
        "title": "API - VR Checkout",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/currencies": {
            "get": {
                "description": "Busca a lista de moedas e países com taxa de câmbio do Dolar",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "currencies"
                ],
                "summary": "Lista as moedas disponíveis",
                "responses": {
                    "200": {
                        "description": "Lista de descrições de moedas (ex: Brazil-Real)",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Exemplo: { \\\"error\\\": \\\"mensagem de erro\\\" }",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/transactions": {
            "post": {
                "description": "Cria uma nova transação",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "transactions"
                ],
                "summary": "Cria uma nova transação",
                "parameters": [
                    {
                        "description": "Dados da transação",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dto.CreateTransactionRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/dto.TransactionResponse"
                        }
                    },
                    "400": {
                        "description": "Exemplo: { \\\"error\\\": \\\"mensagem de erro\\\" }",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/transactions/latest": {
            "get": {
                "description": "Retorna as últimas transações registradas, ordenadas por ordem de inserção",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "transactions"
                ],
                "summary": "Lista as últimas transações",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Número de transações a retornar (padrão: 5)",
                        "name": "limit",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/dto.TransactionResponse"
                            }
                        }
                    },
                    "500": {
                        "description": "Exemplo: { \\\"error\\\": \\\"mensagem de erro\\\" }",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/transactions/{id}": {
            "get": {
                "description": "Retorna uma transação com valor convertido para a moeda escolhida pelo seu ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "transactions"
                ],
                "summary": "Busca uma transação pelo ID",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID da transação",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/dto.TransactionResponse"
                        }
                    },
                    "404": {
                        "description": "Exemplo: { \\\"error\\\": \\\"mensagem de erro\\\" }",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "dto.CreateTransactionRequest": {
            "type": "object",
            "required": [
                "amount_usd",
                "date",
                "description"
            ],
            "properties": {
                "amount_usd": {
                    "type": "number"
                },
                "date": {
                    "type": "string"
                },
                "description": {
                    "type": "string",
                    "maxLength": 50
                }
            }
        },
        "dto.TransactionResponse": {
            "type": "object",
            "properties": {
                "amount_converted": {
                    "type": "number"
                },
                "amount_usd": {
                    "type": "number"
                },
                "date": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "exchange_rate": {
                    "type": "number"
                },
                "id": {
                    "type": "string"
                },
                "rate_date": {
                    "type": "string"
                },
                "to_currency": {
                    "type": "string"
                }
            }
        }
    }
}